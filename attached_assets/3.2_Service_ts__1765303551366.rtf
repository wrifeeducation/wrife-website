    throw new Error("Missing submission or rubric");\
  \}\
\
  const prompt = buildPrompt(\{ submission, rubric, mode: input.mode ?? "full" \});\
\
  const rawLlmResponse = await callLlm(prompt, \{\
    temperature: input.mode === "full" ? 0.2 : 0, // deterministic for scoring\
    maxTokens: 1200,\
  \});\
\
