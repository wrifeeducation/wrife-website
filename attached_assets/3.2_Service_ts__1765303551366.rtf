import \{ saveAssessment \} from "../repos/assessmentRepo";\
\
interface RunAssessmentInput \{\
  submissionId: string;\
  rubricId: string;\
  mode?: "full" | "feedback-only";\
\}\
\
export async function runAssessment(input: RunAssessmentInput) \{\
  const submission = await getSubmissionById(input.submissionId);\
  const rubric = await getRubricById(input.rubricId);\
\
